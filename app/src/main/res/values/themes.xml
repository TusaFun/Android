    <style name="FriendsIconButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="icon">@drawable/ic_baseline_add_circle_outline_24</item>
        <item name="iconSize">32dp</item>
        <item name="android:padding">14dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="MessengerIconButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="icon">@drawable/ic_baseline_message_24</item>
        <item name="iconSize">42dp</item>
        <item name="android:padding">21dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="MyLocationButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="icon">@drawable/ic_baseline_location_searching_24</item>
        <item name="iconSize">22dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="MyProfileButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="icon">@drawable/ic_baseline_home_24</item>
        <item name="iconSize">32dp</item>
        <item name="android:padding">14dp</item>
        <item name="cornerRadius">15dp</item>
